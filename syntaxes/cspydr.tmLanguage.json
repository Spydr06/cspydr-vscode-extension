{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "CSpydr",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#block_comments"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#typenames"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.cspydr",
					"match": "\\b(if|loop|while|for|break|continue|ret|<-|match|asm)\\b"
				},
				{
					"name": "entity.name.type.cspydr",
					"match": "\\b(struct|enum|i8|i16|i32|i64|u8|u16|u32|u64|f32|f64|f80|bool|char|void|usize)"
				},
				{
					"name": "keyword.other.cspydr",
					"match": "\\b(fn|let|type|import|else|macro|noop|namespace|extern)\\b"
				},
				{
					"name": "storage.modifier.cspydr",
					"match": "\\b(const|complex|atimic|volatile)\\b"
				},
				{
					"name": "keyword.operator.cspydr",
					"match": "\\b(sizeof|len|va_arg)\\b"
				},
				{
					"name": "constant.other.cspydr",
					"match": "\\b(true|false|nil)\\b"
				}
			]
		},
		"operators": {
			"patterns": [{
				"name": "keyword.operator.cspydr",
				"match": "([+*/%=!~&<|>:.]|[-])"
			}]	
		},
		"comments": {
			"name": "comment.line.cspydr",
			"begin": "#",
			"end": "(\r\n|\n)",
			"patterns": [{
				"name": "comment.line.cspydr",
				"match": "\\\\."	
			}]
		},
		"block_comments": {
			"name": "comment.block.cspydr",
			"begin": "#\\[",
			"end": "]#",
			"patterns": [{
				"name": "comment.block.cspydr",
				"match": "\\\\."
			}]
		},
		"numbers": {
			"name": "constant.numeric.cspydr",
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "(0x[0-9a-fA-F_]+|0b[0-1_]+|((?<![a-zA-Z0-9_])[0-9_]+))"
				},
				{
					"name": "constant.numeric",
					"match": "(²|³)"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.cspydr",
					"match": "\".+\""
				},
				{
					"name": "string.quoted.cspydr",
					"match": "'([^';]|[\\\\].)'"
				}
			]
		},
		"typenames": {
			"patterns": [
				{
					"name": "entity.name.function.cspydr",
					"match": "[0-9a-zA-Z_]+!"
				},
				{
					"name": "entity.name.function.cspydr",
					"match": "`.+`"
				}
			]
		}
	},
	"scopeName": "source.csp"
}