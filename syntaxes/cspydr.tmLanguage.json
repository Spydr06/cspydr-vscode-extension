{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "CSpydr",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#literal_keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#chars"
		},
		{
			"include": "#block_comments"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#macros"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.cspydr",
					"match": "\\b(if|loop|while|for|break|continue|ret|<-|match|fn|let|mut|type|struct|import|else|macro|sizeof|typeof|noop)\\b"
				},
				{
					"name": "entity.name.type.cspydr",
					"match": "\\b(struct|enum|i8|i16|i32|i64|u8|u16|u32|u64|f32|f64|bool|char|void)"
				}
			]
		},
		"types": {
		},
		"operators": {
			
		},
		"comments": {
			"name": "comment.line.cspydr",
			"begin": "#",
			"end": "(\r\n|\n)",
			"patterns": [{
				"name": "comment.line.cspydr",
				"match": "\\\\."	
			}]
		},
		"block_comments": {
			"name": "comment.block.cspydr",
			"begin": "##",
			"end": "##",
			"patterns": [{
				"name": "comment.block.cspydr",
				"match": "\\\\."
			}]
		},
		"literal_keywords": {
			"name": "constant.other.cspydr",
			"patterns": [{
				"name": "constant.other.cspydr",
				"match": "\\b(true|false|nil)\\b"
			}]
		},
		"numbers": {
			"name": "constant.numeric.cspydr",
			"patterns": [{
				"name": "constant.numeric",
				"match": "(0x[0-9a-fA-F_]+|0b[0-1_]+|((?<![a-zA-Z0-9_])[0-9_]+))"
			}]
		},
		"strings": {
			"name": "string.quoted.double.cspydr",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.cspydr",
					"match": "\\\\."
				}
			]
		},
		"chars": {
			"name": "string.quoted.single.cspydr",
			"patterns": [
				{
					"name": "constant.character.cspydr",
					"match": "'[^';]'"
				}
			]
		},
		"macros": {
			"patterns": [
				{
					"name": "vairable.name.cspydr",
					"match": "[0-9a-zA-Z_]+!"
				}
			]
		}
	},
	"scopeName": "source.csp"
}